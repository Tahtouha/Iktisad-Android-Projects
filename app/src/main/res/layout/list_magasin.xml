<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemMarchand"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="18dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


           <RelativeLayout
               android:id="@+id/left"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/userIcon"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/drw_magasin"
                    android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   />

               <TextView
                   android:id="@+id/magasinName"
                   android:text="karim"
                   android:textColor="#02B65C"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="30sp"
                   />

               <TextView
                   android:id="@+id/phone"
                   android:text="0698970623"
                   android:layout_below="@+id/magasinName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />

               <TextView
                   android:id="@+id/prodTitle"

                   android:textColor="#02B65C"
                   android:layout_marginTop="30dp"
                   android:layout_alignStart="@+id/phone"
                   android:layout_below="@+id/phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Produits:"
                   />

               <TextView
                   android:layout_below="@+id/prodTitle"

                   android:textSize="20sp"
                   android:id="@+id/item1"
                   android:text="Item1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignStart="@+id/phone"
                   />
               <TextView
                   android:layout_below="@+id/item1"

                   android:textSize="20sp"
                   android:id="@+id/item2"
                   android:text="Item2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignStart="@+id/phone"
                   />
               <TextView
                   android:id="@+id/item3"

                   android:textSize="20sp"
                   android:layout_below="@+id/item2"
                   android:text="Item3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignStart="@+id/phone"
                   />


           </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>