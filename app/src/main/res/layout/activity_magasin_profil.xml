<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".magasinProfil"
    android:background="#F3F3F3"
    >


    <TextView
        android:id="@+id/nomMagasin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Magasin"
        android:textColor="#02B65C"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/userIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/drw_magasin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="58 cooperative sara canastel"
        android:layout_below="@+id/nomMagasin"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/abonnement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'abonner"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textAllCaps="false"
        android:background="@drawable/custom_btn"
        android:layout_below="@+id/userIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/produitListTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/produits"
        android:layout_below="@+id/adress"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#02B65C"
        android:layout_marginTop="80dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listeProduits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/produitListTitre"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        />
    <Button
        android:id="@+id/itineraire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher itinÃ©raire"
        android:textColor="@color/white"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:background="@drawable/custom_btn"
        android:drawableStart="@drawable/location_white"
        />

</RelativeLayout>